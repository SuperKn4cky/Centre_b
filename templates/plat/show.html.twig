{% extends 'base.html.twig' %}

                {% block title %}
                    Détail Plat
                {% endblock %}

                {% block body %}
                    <table
                        class="table">
                        <tbody>
                            <tr>
                                <th>
                                    Plat n°
                                </th>
                                <td>
                                    {{ plat.id }}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Nom
                                </th>
                                <td>
                                    {{ plat.nom }}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Composition
                                </th>
                                <td>
                                    {{ plat.composition }}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Type
                                </th>
                                <td>
                                    {{ plat.type }}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Regime
                                </th>
                                <td>
                                    {{ plat.regime }}
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Alergène(s)
                                </th>
                                <td>
                                    {% for allergene in plat.allergenes %}
                                        {{ allergene.nom }}
                                    {% else %}
                                        Pas d'allergène dans ce plat
                                    {% endfor %}
                                </td>
                            </tr>
                        </tbody>
                    </tr>
                </tbody>
            </table>
            <div
                class="btns">
                <a
                    href="{{ path('app_plat_index', {'id': plat.id}) }}">
                    <button
                        class="btn btn-dark delete_btn">
                        Retour à la liste
                    </button>
                </a>
                <a
                    href="{{ path('app_plat_edit', {'id': plat.id}) }}">
                    <button
                        class="btn btn-primary delete_btn">
                        Modifier le plat
                    </button>
                </a>
                {{ include('plat/_delete_form.html.twig') }}
            </div>
        {% endblock %}
